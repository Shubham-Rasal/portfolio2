---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Shubham Rasal" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/code.svg" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="RSS Feed for My Website"
      href="rss.xml"
    />
    <meta name="generator" content={Astro.generator} />

    <meta property="og:title" content={title} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:image" content="/preview.png" />

    <link rel="stylesheet" href="/globals.css">

    <title>{title}</title>
  </head>
  <body
    class="text-slate-900 dark:text-slate-200 min-h-screen top-0 z-[-2] dark:bg-neutral-950 bg-[radial-gradient(100%_50%_at_50%_0%,rgba(0,163,255,0.13)_0,rgba(0,163,255,0)_50%,rgba(0,163,255,0)_100%)]
      dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
  >
    <div
      class="fixed top-0 z-10 w-full p-2 flex items-center h-16 justify-center"
    >
      <nav
        class="border dark:text-slate-300 dark:border-slate-500 border-slate-800 rounded-full p-1 flex w-auto"
      >
        <div class="p-2 font-semibold rounded-full mx-1">
          <a href="/" class="bg-slate-800 text-slate-700">
            <img
              src="/code.svg"
              alt=""
              class="h-8 w-8 rounded-full ring-1 ring-white/10 ring-primary/5"
            /></a
          >
        </div>
        <div class="flex dark:font-light font-normal">
          <div
            class="p-2 items-center flex rounded-full mx-2 dark:hover:text-white"
          >
            <a href="/about" class="">About</a>
          </div>
          <div
            class="p-2 items-center flex rounded-full mx-2 dark:hover:text-white"
          >
            <a href="/projects">Work</a>
          </div>
          <div
            class="p-2 items-center flex rounded-full mx-2 dark:hover:text-white"
          >
            <a href="/blog" class="">Writing</a>
          </div>
        </div>
      </nav>
    </div>
    <slot />
  </body>
</html>
