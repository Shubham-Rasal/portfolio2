---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Shubham Rasal" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/code.svg" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="RSS Feed for My Website"
      href="rss.xml"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="text-slate-50 h-full top-0 z-[-2] w-fit bg-slate-100 bg-[radial-gradient(100%_50%_at_50%_0%,rgba(0,163,255,0.13)_0,rgba(0,163,255,0)_50%,rgba(0,163,255,0)_100%)] dark:bg-neutral-950 dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
  >
    <div class="fixed top-0 z-10 w-full p-2 flex items-center h-16 justify-center">
      <nav
        class="border text-slate-300 border-slate-500 rounded-full p-1 flex w-auto"
      >
        <div class="p-2 font-semibold rounded-full mx-1">
          <a href="/" class="href"> Home</a>
        </div>
        <div class="flex font-light">
          <div class="p-2 rounded-full mx-2 hover:text-white">
            <a href="/about" class="">About</a>
          </div>
          <div class="p-2 rounded-full mx-2 hover:text-white">
            <a href="/projects">Projects</a>
          </div>
          <div class="p-2 rounded-full mx-2 hover:text-white">
            <a href="/blog" class="">Blog</a>
          </div>
        </div>
      </nav>
    </div>
    <slot />
  </body>
</html>
