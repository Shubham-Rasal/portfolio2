---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Shubham Rasal" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/code.svg" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="RSS Feed for My Website"
      href="rss.xml"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-slate-900 text-slate-50 w-full">
    <div
      class="absolute top-0 z-[-2] h-full  w-full bg-slate-100 bg-[radial-gradient(100%_50%_at_50%_0%,rgba(0,163,255,0.13)_0,rgba(0,163,255,0)_50%,rgba(0,163,255,0)_100%)] dark:bg-neutral-950 dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
    >
    </div>

    <nav
      class="w-full flex space-x-6 justify-center h-16 items-center font-semibold text-xl fixed top-0 opacity-90"
    >
      <a href="/" class="">Home</a>
      <a href="/about" class="">About</a>
      <a href="/projects">Projects</a>
      <a href="/blog" class="">Blog</a>
    </nav>
    <slot />
  </body>
</html>
