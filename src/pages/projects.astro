---
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";
import { projects } from "../content/_project";
type Project = {
    index: number;
    title: string;
    description: string;
    github: string;
    live?: string;
};

//type cast to avoid type errors
const p: Project[] = projects;
// console.log(p);



---

<Layout title="Projects">
    <div class="flex flex-col pt-16 z-50">
     

        <div class="flex flex-col mt-10  w-full justify-center">
            {p.map((project) => <Card title={project.title} description={project.description} github={project.github} 
            live={project.live}  index={project.index}
            />)}
        </div>
    </div>
</Layout>


