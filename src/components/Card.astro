---
export interface Props {
  title: string;
  index: number;
  description: string;
  github: string;
  live?: string;
}
const { title, description, github, live } = Astro.props;
---

<a target="_blank" href={github}>
  <div
    class="w-11/12 flex flex-wrap justify-between mx-auto lg:p-1 lg:px-32 md:p-2 px-2 md:px-12 text-base font-medium text-teal-400 cursor-pointer hover:underline hover:underline-offset-3 hover:text-teal-500 transition duration-300 ease-in-out"
  >

      <span class="text-white text-md font-bold w-full lg:w-auto">{title}</span>
      <span class="md:inline-block text-white text-md font-light"
        >{description}</span
      >
  </div>
</a>
